<?xml version="1.0"?>

<layout version="0.1.0">
    <flashsale_index_index>
        <reference name="content">
            <block type="flashsale/page" name="flashsale_page" template="flashsale/page.phtml">
                <block type="cms/block" name="flashsale_top_banner">
                    <action method="setData">
                        <name>block_id</name>
                        <value>flashsale_top_banner</value>
                    </action>
                </block>
                <block type="cms/block" name="flashsale_top_banner_mobile">
                    <action method="setData">
                        <name>block_id</name>
                        <value>flashsale_top_banner_mobile</value>
                    </action>
                </block>
            </block>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
            <remove name="left" />
            <remove name="right" />
        </reference>
        <reference name="head">
            <action method="setTitle">
                <title>Flash Sale - FAHASA.COM</title>
            </action>
        </reference>
    </flashsale_index_index>
</layout>