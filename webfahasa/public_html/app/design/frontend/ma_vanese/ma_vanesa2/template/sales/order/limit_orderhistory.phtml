/**
 * Limit template for orders history 
 *
 * @type: Mage_Page_Block_Html_Pager
 */
?>
<style>
    .limiter{
        display: flex;
        width: 25%;
        float: right;
    }
    .lable-order-history{
        display: flex;
        justify-content: center;
        align-items: center;
        flex-basis: 80%;
    }
    @media(max-width:992px){
        .limiter{
            display: none;
        }
    }
</style>
<?php if ($this->getCollection()->getSize()): ?>
    <?php if ($this->getShowPerPage()): ?>
        <div class="limiter">
            <label class="lable-order-history"><?php echo $this->__('Show') ?></label>
            <select onchange="setLocation(this.value)">
                <?php foreach ($this->getAvailableLimit() as $_key => $_limit): ?>
                    <option value="<?php echo $this->getLimitUrl($_key) ?>"<?php if ($this->isLimitCurrent($_key)): ?> selected="selected"<?php endif ?>>
                        <?php echo $_limit ?> <?php echo $this->__('orders')  ?>
                    </option>
                <?php endforeach; ?>
            </select> <?php // echo $this->__('per page')  ?>
        </div>
    <?php endif ?>
<?php endif ?>
