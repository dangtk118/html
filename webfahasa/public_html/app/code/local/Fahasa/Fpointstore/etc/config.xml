<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Fahasa_Fpointstore>
            <version>0.0.1</version>
        </Fahasa_Fpointstore>
    </modules>
    <global>
        <helpers>
            <fpointstore>
                <class>Fahasa_Fpointstore_Helper</class>
            </fpointstore>
        </helpers>
        <blocks>
            <fpointstore>
                <class>Fahasa_Fpointstore_Block</class>
            </fpointstore>
        </blocks>
        <resources>
            <fpointstore_setup>
                <setup>
                    <module>Fahasa_Fpointstore</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </fpointstore_setup>
        </resources>
    </global>
    <frontend>
        <routers>
            <fpointstore>
                <use>standard</use>
                <args>
                    <module>Fahasa_Fpointstore</module>
                    <frontName>fpointstore_v1</frontName>
                </args>
            </fpointstore>
        </routers>
        <translate>
            <modules>
                <Fahasa_Fpointstore>
                    <files>
                        <default>Fahasa_Fpointstore.csv</default>
                    </files>
                </Fahasa_Fpointstore>
            </modules>
        </translate>
    </frontend>
    <default>
        <fpointstore_config>
            <config>
                <is_active>0</is_active>
                <active_fpointstore_id>0</active_fpointstore_id>
                <slider_limit>10</slider_limit>
                <gifts_per_page>12</gifts_per_page>
                <redis_port>6379</redis_port>
                <redis_host>localhost</redis_host>
            </config>
        </fpointstore_config>
    </default>
</config>
