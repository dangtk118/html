<config>
    <modules>
        <Fahasa_Mobileui>
            <version>0.0.1</version>
        </Fahasa_Mobileui>
    </modules>
    <global>
        <models>
            <mobileui>
                <class>Fahasa_Mobileui_Model</class>
            </mobileui>
        </models>
        <events>
            <core_block_abstract_to_html_after>
                <observers>
                   <mobileui_core_block_abstract_to_html_after>
                      <type>singleton</type>
                      <class>Fahasa_Mobileui_Model_Observer</class>
                      <method>AfterBlockRenderEvent</method>
                   </mobileui_core_block_abstract_to_html_after>
               </observers>
            </core_block_abstract_to_html_after>
        </events>
        <fieldsets>
            <sales_convert_quote>
                <mobile_channel>
                    <to_order>*</to_order>
                </mobile_channel>
                <pickup_location>
                    <to_order>*</to_order>
                </pickup_location>
            </sales_convert_quote>
        </fieldsets>
    </global>
</config>
